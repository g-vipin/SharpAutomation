{
    "Environment": {
        "Name": "Prod"
    },
    "BrowserSettings": {
        "Browser": "Chrome",
        "Headless": false,
        "BaseUrl": "https://www.saucedemo.com/",
        "TimeoutSec": 10
    },
    "ApiSettings": {
        "BaseUrl": "http://localhost:7035/api/CarPrice",
        "ContentType": "application/json",
        "TimeoutSec": 10
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Debug",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "TestResults/logs/ApplicationLog-.log",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 20,
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level}] {CorrelationID} {Message}{NewLine}{Exception}"
                }
            }
        ],
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithThreadId"
        ]
    }
}